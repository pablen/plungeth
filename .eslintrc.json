{
  "env": {
    "node": true
  },
  "extends": ["bloq", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "arrow-body-style": ["warn", "as-needed"],
    "complexity": ["warn", { "max": 10 }],
    "no-console": 0,
    "no-shadow": "error"
  }
}
